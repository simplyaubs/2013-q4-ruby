<h1>World cities</h1>

<table border="1">
	<tr>
		<th>City Name</th>
		<% WorldCity.order(:id).each do |city| %>
			<td><%= city.name %></td>
		<% end %>
	</tr>

	<tr>
		<th>Country</th>
		<% WorldCity.order(:id).each do |city| %>
			<td>
				<img src="/images/<%= city.country_flag_filename %>">
				<%= city.country %>
			</td>
		<% end %>
	</tr>

	<tr>
		<th>More details</th>
		<% WorldCity.order(:id).each do |city| %>
			<td>
				<a href="/cities/<%= city.id %>">Details</a>
			</td>
			<% end %>
	</tr>
</table>
